---
import type { CollectionEntry } from "astro:content";

type Post = CollectionEntry<"posts">;

interface Props {
  post: Post;
}

const { post } = Astro.props as Props;
const { slug, data } = post;
---

<a
  href={`/posts/${slug}/`}
  class="group block rounded-xl border px-4 py-4 my-2 transition
         border-slate-200 bg-white hover:border-violet-300 hover:bg-violet-50
         dark:border-slate-800 dark:bg-slate-900/60 dark:hover:border-violet-400
         dark:hover:bg-slate-900 dark:hover:shadow-lg dark:hover:shadow-violet-900/30"
>
  <h2
    class="text-lg font-semibold text-slate-900 transition-colors
           group-hover:text-violet-700
           dark:text-violet-300 dark:group-hover:text-violet-200"
  >
    {data.title}
  </h2>

  <p class="mt-1 text-xs text-slate-500 dark:text-slate-400">
    <time datetime={data.date.toISOString()}>
      {
        data.date.toLocaleDateString("ru-RU", {
          year: "numeric",
          month: "short",
          day: "numeric",
        })
      }
    </time>
  </p>

  {
    data.description && (
      <p class="mt-2 text-sm text-slate-700 dark:text-slate-200">
        {data.description}
      </p>
    )
  }
</a>
